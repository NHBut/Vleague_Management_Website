    function Login() {
        var dataSend = {
            TenDangNhap: $("#TaiKhoan").val(),
            MatKhau: $("#MatKhau").val(),
        }
        var url = 'https://localhost:7239/api/token';
        $.ajax({
            url: url,
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(dataSend),
            dataType: 'text',
            error: function (error) {
                alert(error)
                alert("Lỗi")
            },
            success: function (response) {
